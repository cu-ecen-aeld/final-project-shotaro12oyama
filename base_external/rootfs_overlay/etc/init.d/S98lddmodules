#! /bin/sh
set -e

NAME=lddmodules
case "$1" in
	start)
		echo "Loading drivers and modules"
		aesdchar_load
		modprobe hello
		module_load faulty
		scull_load
		pmod_load
		;;
	stop)
		echo "Unloading drivers and modules"
		aesdchar_unload
		rmmod hello
        	module_unload faulty
        	scull_unload
		pmod_unload
        ;;
    *)
        echo "Usage: $0 {start|stop}"
    exit 1
esac
exit 0
